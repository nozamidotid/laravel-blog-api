{
    "openapi": "3.0.3",
    "info": {
        "title": "Blog API Documentation",
        "description": "This is a sample Blog API server based on the openAPI 3.0 specification",
        "contact": {
            "email": "nozami.id@gmail.com"
        },
        "license": {
            "name": "Blog API",
            "url": "http://localhost:8000"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api/v1"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Operation about User"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "tags": ["user"],
                "description": "Register new user",
                "requestBody": {
                    "description": "Created User Object",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["name", "username", "password"],
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "nozami": {
                                    "description": "Register User Nozami",
                                    "value": {
                                        "name": "nozami",
                                        "username": "nozami",
                                        "password": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Register Success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "nama": "nozami",
                                                "username": "nozami"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validation Error",
                        "content": {
                            "apllication/json": {
                                "examples": {
                                    "validationError": {
                                        "description": "Validation Error",
                                        "value": {
                                            "errors": {
                                                "username": [
                                                    "The username field is required.",
                                                    "The username has already been taken."
                                                ],
                                                "name": [
                                                    "The name field is required."
                                                ],
                                                "password": [
                                                    "The password field is required."
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "tags": ["user"],
                "description": "Login user",
                "requestBody": {
                    "description": "Login User",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["username", "password"],
                                "properties": {
                                    "username": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "nozami": {
                                    "description": "Login User Nozami",
                                    "value": {
                                        "username": "nozami",
                                        "password": "password"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Login Success",
                        "content": {
                            "application/json": {
                                "examples": {
                                    "success": {
                                        "value": {
                                            "data": {
                                                "id": 1,
                                                "nama": "nozami",
                                                "username": "nozami"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "error credential",
                        "content": {
                            "apllication/json": {
                                "examples": {
                                    "validationError": {
                                        "description": "error credential",
                                        "value": {
                                            "errors": {
                                                "message": [
                                                    "username or password wrong!"
                                                ]
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}